{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Injected from Azure Container App Environment Variables",
    "HangfireConnection": "Injected from Azure Container App Environment Variables",
    "Redis": "Injected from Azure Container App Environment Variables"
  },
  
  "JwtSettings": {
    "Secret": "Injected from Azure Key Vault",
    "Issuer": "https://banking-dev-api.azurecontainerapps.io",
    "Audience": "https://banking-dev-api.azurecontainerapps.io",
    "ExpiryMinutes": 60
  },
  
  "EncryptionSettings": {
    "Key": "Injected from Azure Key Vault"
  },
  
  "RateLimitSettings": {
    "Enabled": true,
    "PermitLimit": 5000,
    "WindowInSeconds": 60,
    "QueueLimit": 100
  },
  
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://banking-dev-web.azurewebsites.net"
    ]
  },
  
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.ApplicationInsights" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ],
    "Properties": {
      "Application": "BankingSystem",
      "Environment": "Development"
    }
  },
  
  "Hangfire": {
    "ServerName": "banking-dev-api",
    "WorkerCount": 10,
    "Queues": [ "default", "critical", "background" ],
    "DashboardPath": "/hangfire",
    "DashboardTitle": "Banking System - Hangfire Dashboard (Dev)"
  },
  
  "HealthChecks": {
    "Enabled": true,
    "PostgreSQL": {
      "Timeout": 5
    },
    "Redis": {
      "Timeout": 5
    },
    "Hangfire": {
      "Timeout": 10
    }
  }
}
