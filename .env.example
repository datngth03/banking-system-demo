# ============================================
# Banking System - Environment Variables
# ============================================
# Copy this file to .env and update values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=BankingSystemDb
DB_USER=postgres
DB_PASSWORD=your_password_here

# Hangfire Database
HANGFIRE_DB_NAME=BankingSystemHangfire

# JWT Configuration
JWT_SECRET=your_secret_key_minimum_32_characters_long
JWT_ISSUER=BankingSystem.API
JWT_AUDIENCE=BankingSystem.Users
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_TOKEN_DAYS=7

# Email Configuration (SMTP)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER_EMAIL=noreply@bankingsystem.com
EMAIL_SENDER_NAME=Banking System
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_ENABLE_SSL=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Rate Limiting
RATE_LIMIT_PERMIT_LIMIT=100
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_QUEUE_LIMIT=5

# Logging Level
LOG_LEVEL=Information

# ============================================
# Stripe Payment Gateway Configuration
# ============================================
# Get your API keys from: https://dashboard.stripe.com/apikeys
# Get your webhook signing secret from: https://dashboard.stripe.com/webhooks

# Stripe Secret Key (for backend - KEEP SECURE, never commit)
# Format: sk_test_51Su8VrL7tQs8XhgQ... (test) or sk_live_... (production)
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# Stripe Publishable Key (safe to expose to frontend)
# Format: pk_test_51Su8VrL7tQs8Xhg... (test) or pk_live_... (production)
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# Stripe Webhook Signing Secret (for validating webhook authenticity)
# Format: whsec_1234567890abcdef...
# Get this from Dashboard → Webhooks → Select endpoint → Signing secret
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Test Mode Flag (use test cards when true)
# Test cards: 4242-4242-4242-4242 (success), 4000-0000-0000-0002 (decline)
STRIPE_TEST_MODE=true
