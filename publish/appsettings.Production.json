{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore": "Error",
      "Hangfire": "Warning"
    },
    "Seq": {
      "Url": "https://seq.yourcompany.com",
      "ApiKey": ""
    }
  },

  "ServiceName": "BankingSystem.API",
  "ServiceVersion": "1.0.0",
  "Environment": "Production",

  "AllowedHosts": "api.yourcompany.com",

  "ConnectionStrings": {
    "DefaultConnection": "",
    "HangfireConnection": "",
    "Redis": ""
  },

  "JwtSettings": {
    "Secret": "",
    "Issuer": "BankingSystem.API",
    "Audience": "BankingSystem.Users",
    "ExpirationInMinutes": 30,
    "RefreshTokenExpirationInDays": 7
  },

  "EmailSettings": {
    "SmtpServer": "smtp.sendgrid.net",
    "SmtpPort": 587,
    "SenderEmail": "noreply@yourcompany.com",
    "SenderName": "Banking System",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  },

  "CorsSettings": {
    "AllowedOrigins": [
      "https://app.yourcompany.com"
    ]
  },

  "RateLimitSettings": {
    "PermitLimit": 50,
    "WindowInSeconds": 60,
    "QueueLimit": 3
  }
