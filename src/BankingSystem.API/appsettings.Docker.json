{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "Hangfire": "Information"
    },
    "Seq": {
      "Url": "http://seq",
      "ApiKey": ""
    }
  },

  "ServiceName": "BankingSystem.API",
  "ServiceVersion": "1.0.0",
  "Environment": "Docker",

  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres-business;Port=5432;Database=BankingSystemDb;Username=postgres;Password=postgres123;Pooling=true;MinPoolSize=5;MaxPoolSize=50;Include Error Detail=true",
    "HangfireConnection": "Host=postgres-hangfire;Port=5432;Database=BankingSystemHangfire;Username=postgres;Password=postgres123;Pooling=true;MinPoolSize=2;MaxPoolSize=20",
    "Redis": "redis:6379,abortConnect=false,connectTimeout=5000,syncTimeout=5000"
  },

  "JwtSettings": {
    "Secret": "ThisIsAVerySecretKeyForJWTTokenGeneration_ChangeThisInProduction_MustBeAtLeast32CharactersLong",
    "Issuer": "BankingSystem.API",
    "Audience": "BankingSystem.Users",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },

  "InterestSettings": {
    "SavingsAnnualRate": 0.03,
    "CheckingAnnualRate": 0.0,
    "InvestmentAnnualRate": 0.05,
    "MinimumBalanceForInterest": 100,
    "CompoundingFrequency": "Monthly"
  },

  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200"
    ]
  },

  "RateLimitSettings": {
    "PermitLimit": 100,
    "WindowInSeconds": 60,
    "QueueLimit": 5
  },

  "Encryption": {
    "Key": "YourSuperSecretEncryptionKey12345678901234567890",
    "IV": "YourInitVector123"
  }
}
